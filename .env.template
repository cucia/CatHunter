# Your Discord user account token (see documentation for how to get it)
USER_TOKEN=

# Target channel ID to listen in (optional). If empty, listens in all channels.
TARGET_CHANNEL_ID=

# Optional server/guild id (not required for this simple listener)
TARGET_SERVER_ID=

# Text the spawner posts that indicates a cat has appeared
TRIGGER_TEXT=Type "cat" to catch it!

# Message to respond with when trigger is detected
RESPONSE_MESSAGE=cat

# Optional: expected bot username (unused if you prefer only checking .bot flag)
BOT_USERNAME=Cat Bot

# Optional: specific bot user ID to filter triggers from (preferred). Use numeric ID, e.g. 123456789012345678
BOT_ID=

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Response delay before sending the countermeasure (in seconds)
RESPONSE_DELAY=0

# Enable jitter (randomization) for response delay (true/false)
JITTER_ENABLED=false

# Maximum jitter time in seconds (added randomly to RESPONSE_DELAY if JITTER_ENABLED=true)
JITTER_MAX=0

# Enable verbose debug logs about message filtering (true/false)
DEBUG_LOG_MESSAGES=false

# === SELECTIVE CAT CATCHING ===
# Control which cat types to catch and custom delay per type
# Set CATCH_<TYPE>=true/false to enable/disable catching that type
# Set CATCH_<TYPE>_DELAY=X to set custom delay (in seconds) for that type

